# BrainSAIT Healthcare SDK - Environment Configuration Template
# Copy this file to .env for local development
# NEVER commit .env files with actual values to version control

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
SDK_VERSION=1.2.0
LOG_LEVEL=info

# ============================================
# FHIR Configuration
# ============================================
FHIR_BASE_URL=https://fhir-sandbox.nphies.sa
FHIR_VERSION=R4

# ============================================
# NPHIES Configuration
# ============================================
NPHIES_BASE_URL=https://nphies-sandbox.sa
NPHIES_CLIENT_ID=your-client-id-here
NPHIES_CLIENT_SECRET=your-client-secret-here

# ============================================
# Database Configuration (MongoDB Atlas)
# ============================================
# SECURITY: Store actual MongoDB URI in Cloudflare Workers Secrets
# For local dev: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_ATLAS_URI=your-mongodb-connection-string-here
DATABASE_NAME=brainsait_platform_dev

# ============================================
# Encryption & Security
# ============================================
# SECURITY: Generate strong random keys for production
# Example: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:8787
API_TIMEOUT=30000
API_MAX_RETRIES=3

# ============================================
# Cloudflare Workers (Production)
# ============================================
# These should be set via Cloudflare Dashboard or wrangler CLI:
# - wrangler secret put MONGODB_ATLAS_URI
# - wrangler secret put NPHIES_CLIENT_SECRET
# - wrangler secret put ENCRYPTION_KEY
# - wrangler secret put JWT_SECRET

# ============================================
# Feature Flags
# ============================================
ENABLE_FHIR=true
ENABLE_NPHIES=true
ENABLE_AI_AGENTS=true
ENABLE_ANALYTICS=true
ENABLE_VISION2030=true

# ============================================
# Compliance & Audit
# ============================================
HIPAA_AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2190
ENABLE_PHI_MASKING=true

# ============================================
# Rate Limiting & Security
# ============================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
ENABLE_CORS=true
ALLOWED_ORIGINS=https://sdk.brainsait.com,http://localhost:3000

# ============================================
# Monitoring & Analytics
# ============================================
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-here

# ============================================
# Development Tools
# ============================================
ENABLE_DEBUG_LOGGING=false
ENABLE_API_MOCKING=false
